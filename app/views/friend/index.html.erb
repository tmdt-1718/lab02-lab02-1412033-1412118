<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a href="/" class="navbar-brand">
        <span class="glyphicon glyphicon-search"></span>
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
        <i class="fa fa-home" aria-hidden="true"></i>
        </a>

      <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsableContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsableContent">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="#" class="nav-link">Home</a></li>
          <li class="nav-item"><a href="#" class="nav-link">About</a></li>


          <% if session[:current_user] %>
          <li class="nav-item">
            <a class="nav-link">
              <%= session[:current_user]["name"] %>
            </a>
          </li>

          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link" %>
          </li>
          <% end %>

        </ul>
      </div>

</nav>

<div class="container">
  <div class="row">
    <div class="col-3">
      <a href="/mail/compose" class="nav-link" style="color: white">Compose</a>
      <a href="/mail/received" class="nav-link" style="color: white">Inbox</a>
      <a href="/friends" class="nav-link" style="color: white">Friends</a>
      <a href="/request" class="nav-link" style="color: white">Friend Requests</a>
      <a href="/mail/sent" class="nav-link" style="color: white">Sent Mail</a>
    </div>

    <div class="col-9">


        <form class="form-inline my-2 my-lg-0">
          <%= form_with scope: :user, url: request_path, local: true do |f|%>

          <%= f.text_field :email , :placeholder=>"Email", class: "form-control" %>

              <button id="request" type="submit" class="btn">Add a friend</button>
              <% if flash[:error] %>
                <p><span style="color: red"><%= flash[:error] %></span></p>
              <%else%>
                <p><span><span style="color: green;"><%= flash[:success] %></span></p>
              <%end%>
          <% end %>
        </form>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @friend.each do |user| %>

              <tr>
                <td><i><%= user.name%></i></td>

                <td><i><%= user.email %></i></td>
                <td><button class="btn btn-success" onclick="location.href='<%= unfriend_path(user.id) %>'">Unfriend</button></td>

              </tr>

          <% end %>
            </tbody>
          </table>
      </table>
    </div>
  </div>
</div>
